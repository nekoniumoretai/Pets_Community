<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="mb-4">ペットの編集画面</h1>

      <%= form_with model: @pet, url: user_pet_path(@pet.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "ペットの名前(*必須)" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :gender, "性別(*必須)" %>
          <%= f.select :gender, ["オス", "メス", "不明"], prompt: "性別を選択", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :birthday, "誕生日" %>
          <div class="row">
            <div class="col-md-4">
              <%= f.select :birthday_year, (Date.today.year - 100..Date.today.year).to_a.reverse, { prompt: "年" }, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.select :birthday_month, 1..12, { prompt: "月" }, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.select :birthday_day, 1..31, { prompt: "日" }, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :kind, "品種(*必須)" %>
          <%= f.text_field :kind, class: "form-control", placeholder: "品種" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class: "form-control", rows: 5, placeholder: "紹介文" %>
        </div>

        <div class="row justify-content-center">
          <div class="col-3">
            <%= f.submit '保存', class: "btn btn-primary btn-block" %>
            <%= link_to "削除", user_pet_path(@pet), method: :delete, data: { confirm:"削除しますか？" }, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
