<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class="text-center mt-5">コミュニティの編集</h3>
      <%= form_with model: @group, url: group_path(@group), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :group_image, class: 'form-control-file', accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit '更新する', class: 'btn btn-primary' %>
          <%= link_to "コミュニティを削除する", group_path(@group), method: :delete, data: { confirm:"本当に削除しますか？" }, class:"btn btn-danger ml-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>