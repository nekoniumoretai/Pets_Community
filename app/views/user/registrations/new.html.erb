<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h3 class="card-title text-center mb-4"><strong>新規会員登録</strong></h3>
          <%= form_with model: @user, url: user_registration_path do |f| %>
            <%= render "user/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :ニックネーム %>
              <%= f.text_field :nickname, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>半角英数字(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :確認用パスワード %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "登録する", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "user/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
