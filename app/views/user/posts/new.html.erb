<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto mt-3">
      <h1 class="text-center">新規投稿画面</h1>
      <%= form_with model: @post do |f| %>

        <div class="form-group">
          <h4>タグ</h4>
          <div class="row table-bordered">
            <% Tag.all.each do |tag| %>
              <div class="col-md-3">
                <div class="form-check">
                  <%= f.check_box :tag_ids, { multiple: true, class: "form-check-input" }, tag.id, nil %>
                  <%= label_tag "post_tag_ids_#{tag.id}", tag.name, class: "form-check-label" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <h4>タイトル</h4>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>本文</h4>
          <%= f.rich_text_area :content, class: "form-control tall-text-area", style: "height: 300px;" %>
        </div>

        <div class="form-group text-right">
          <%= f.submit '投稿する', class: "btn btn-primary" %>
          <!--<p class="mt-2">※投稿後、画像はリサイズされます</p>-->
        </div>
      <% end %>
    </div>
  </div>
</div>
