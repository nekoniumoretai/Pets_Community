<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1>編集画面</h1>

      <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <th>画像</th>
              <td><%= f.file_field :image, accept: "image/*", class: "form-control-file" %></td>
            </tr>
            <tr>
              <th>タイトル</th>
              <td><%= f.text_field :title, class: "form-control" %></td>
            </tr>
            <tr>
              <th>本文</th>
              <td><%= f.text_area :body, class: "form-control" %></td>
            </tr>
            <tr>
              <td colspan="2" class="text-center">
                <%= f.submit '保存', class: "btn btn-primary" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
