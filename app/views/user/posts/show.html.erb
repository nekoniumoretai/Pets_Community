<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-6">
              <strong>ユーザーネーム：</strong>
            </div>
            <div class="col-6">
              <%= @post.user.nickname %>
            </div>
          </div>
          <% if @post.images.attached? %>
            <div class="row">
              <div class="col-6">
                <strong>投稿した画像：</strong>
              </div>
              <div class="col-6 text-center">
                <%= image_tag @post.images.variant(resize: "100x100") %>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-6">
              <strong>タイトル：</strong>
            </div>
            <div class="col-6">
              <%= @post.title %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>本文：</strong>
            </div>
            <div class="col-6">
              <%= @post.content %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>投稿日：</strong>
            </div>
            <div class="col-6">
              <%= @post.created_at.strftime('%Y/%m/%d') %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>タグ：</strong>
            </div>
            <div class="col-6">
              <% @post.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </div>
          </div>
          <% if @post.user == current_user %>
            <div class="row">
              <div class="col-12 text-center">
                <%= link_to "編集", edit_post_path(@post), class:"btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div id="comments">
        <%= render 'user/post_comments/comment', post: @post, post_comment: @post_comment %>
      </div>
      <div id="favorite_btn_<%= @post.id %>">
        <%= render 'user/favorites/favorite', post: @post %>
      </div>
    </div>
  </div>
</div>
