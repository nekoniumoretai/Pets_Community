<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-6">
              <strong>ユーザーネーム：</strong>
              <%= @post.user.nickname %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>タイトル：</strong>
              <%= @post.title %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>本文</strong>
            </div>
          </div>
          <div class="row">
            <div>
              <%= @post.content %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>投稿日：</strong>
              <%= @post.created_at.in_time_zone('Asia/Tokyo').strftime('%Y年%m月%d日 %H:%M')%>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <strong>タグ：</strong>
              <% @post.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% if @post.user == current_user %>
        <div class="row">
          <div class="col-9"></div>
          <div class="col-3 text-center">
            <%= link_to "編集", edit_post_path(@post), class: "btn btn-success btn-block mt-1" %>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-9"></div>
          <div class="col-3 text-center">
            <%= link_to "投稿一覧に戻る", posts_path, class: "btn btn-secondary btn-block mt-1" %>
          </div>
        </div>
      <% end %>
      <div id="favorite_btn_<%= @post.id %>">
        <%= render 'user/favorites/favorite', post: @post %>
      </div>
      <div id="comments">
        <%= render 'user/post_comments/comment', post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>
