<h1 class="mb-4">みんなの投稿（posts.index）</h1>
<div class="row">
  <%= form_tag posts_path, method: :get, class: 'boards__searchForm' do %>
    <%= select_tag :tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]), { prompt: 'タグで絞り込み検索', onchange: 'submit(this.form);'} %>
  <% end %>
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if post.images.attached? %>
          <div class="card-img-top">
            <% post.images.each do |image| %>
              <%= image_tag image, class: "card-img-top", alt: "投稿画像" %>
            <% end %>
          </div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
          投稿内容を50文字まで表示させる
          <p class="card-text"><%= strip_tags(post.content.to_s).truncate(50) %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>ユーザーネーム：</strong>
            <%= link_to post.user.nickname, user_path(post.user) %>
            <% if current_user.following?(post.user) %>
              <%= link_to "フォローを外す", user_relationships_path(post.user), method: :delete, class: "btn btn-sm btn-outline-primary ml-2" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(post.user), method: :post, class: "btn btn-sm btn-primary ml-2" %>
            <% end %>
          </li>
          <li class="list-group-item">
            <strong>タグ：</strong>
            <% post.tags.each do |tag| %>
              <span class="badge badge-secondary"><%= tag.name %></span>
            <% end %>
          </li>
          <li class="list-group-item">
            <p><%= link_to "#{post.post_comments.count}コメント", post_path(post.id), class: "btn btn-sm btn-outline-secondary" %></p>
            <p><%= render 'favorites', post: post %></p>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
