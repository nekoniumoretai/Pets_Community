<div class="container">
  <h2 class="mt-4 mb-4 text-center">ユーザー情報編集</h2>
  <%= form_with model: @user, url: user_path(@user), method: :patch, class: "mt-4" do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :get_profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :nickname, "ニックネーム" %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
