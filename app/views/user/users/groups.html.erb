<div class="container">
  <h2>参加しているコミュニティ一覧</h2>
  <ul>
    <% @group_users.each do |group| %>
      <li><%= link_to group.name, group_path(group) %>
        <% if group.is_owned_by?(current_user) %>
          <p>※このコミュニティのオーナーです</p>
        <% end %>
      </li>
    <% end %>
    <div class="row justify-content-center">
      <% if @group_users.empty? %>
       <p>参加しているコミュニティはありません</p>
      <% end %>
    </div>


  </ul>
  <div class="row justify-content-center">
    <%= link_to "すべてのコミュニティを見る", groups_path, class: "btn btn-secondary" %>
  </div>
</div>
