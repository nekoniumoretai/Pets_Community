<% if admin_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, value: params[:content] %>
    <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿タイトル" => "post" }, selected: params[:model]) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}, selected: params[:method ]) %>
    <%= f.submit "検索", name: nil %>
  <% end %>
<% end %>



