<div class="container">
  <h2 class="mt-5 mb-4 text-center"><%= @user.nickname %>さんの詳細情報</h2>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-6 text-right">
              <strong>プロフィール画像:</strong>
            </div>
            <div class="col-6">
              <%= image_tag @user.get_profile_image, class: "rounded-circle", size: "100x100" %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-6 text-right">
              <strong>会員ステータス:</strong>
            </div>
            <div class="col-6">
              <%= @user.is_active ? '有効' : '停止中' %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-6 text-right">
              <strong>ニックネーム:</strong>
            </div>
            <div class="col-6">
              <%= @user.nickname %>
            </div>
          </div>
          <div class="row text-center">
            <div class="col ">
              <strong>自己紹介文</strong>
            </div>
          </div>
          <div class="row text-center">
            <div class="col">
              <%= @user.introduction %>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= link_to "情報を編集する", edit_admin_user_path(@user), class: "btn btn-success mt-2" %>
        <%= link_to "#{@user.nickname}さんの投稿一覧を確認する", admin_user_posts_path(@user), class: "btn btn-primary mt-2 ml-3" %>
      </div>
    </div>
  </div>
</div>
