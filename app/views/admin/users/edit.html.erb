<div class="container">
  <h2 class="mt-5 mb-4 text-center"><%= @user.nickname %>さんの詳細情報</h2>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, html: { class: "mt-3" }) do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <label for="profile_image" class="form-label">プロフィール画像</label>
              <%= image_tag @user.get_profile_image, class: "rounded-circle img-fluid", size: "100x100" %>
            </div>
            <div class="mb-3">
              <label class="form-label">ニックネーム</label>
              <p class="form-control-static"><%= @user.nickname %></p>
            </div>
            <div class="mb-3">
              <label for="is_active" class="form-label">会員ステータス</label>
              <%= f.select :is_active, [['有効にする', true], ['停止にする', false]], {}, { class: 'form-control' } %>
            </div>
            <div class="text-center">
              <%= f.submit "更新する", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
