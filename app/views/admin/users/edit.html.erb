<div class="container">
  <h2 class="mt-5 mb-4 text-center"><%= @user.nickname %>さんの詳細情報</h2>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, html: { class: "mt-3" }) do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <th>プロフィール画像</th>
              <td><%= image_tag @user.get_profile_image, class: "rounded-circle", size: "100x100" %></td>
            </tr>
            <tr>
              <th>ニックネーム</th>
              <td><%= @user.nickname %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <div class="form-group">
                  <%= f.select :is_active, [['有効にする', true], ['停止にする', false]], {}, { class: 'form-control' } %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="actions text-center">
          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
