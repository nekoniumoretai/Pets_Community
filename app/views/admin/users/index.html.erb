<div class="container">
  <h1 class="text-center mt-4 mb-4">ユーザー情報一覧</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーアイコン</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>紹介文</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.profile_image, size: "50x50", class: "img-fluid rounded-circle" %></td>
              <td><%= link_to user.nickname, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= truncate(user.introduction, length: 15) %></td>
              <td><%= user.is_active ? '有効' : '停止中' %></td>
              <td><%= link_to "編集", edit_admin_user_path(user), class: "btn btn-success mr-2" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
