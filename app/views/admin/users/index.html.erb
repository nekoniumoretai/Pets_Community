<div class="container">
  <h1 class="text-center mt-4 mb-4">ユーザー情報一覧</h1>

  <div class="row">
    <div class="col">
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <%= image_tag user.profile_image, size: '50x50', class: "mr-3 rounded-circle" %>
              <div>
                <h5><%= link_to user.nickname, admin_user_path(user) %></h5>
                <p><%= truncate(user.introduction, length: 50) %></p>
              </div>
            </div>
            <div>
              <span class="badge badge-<%= user.is_active ? 'success' : 'danger' %>"><%= user.is_active ? '有効' : '停止中' %></span>
              <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-success btn-sm ml-5" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= paginate @users %>
  </div>
</div>
